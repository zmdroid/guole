<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"  
    xmlns:context="http://www.springframework.org/schema/context"  
    xsi:schemaLocation="   
          http://www.springframework.org/schema/beans    
          http://www.springframework.org/schema/beans/spring-beans-2.0.xsd 
          http://www.springframework.org/schema/aop    
          http://www.springframework.org/schema/aop/spring-aop-2.0.xsd   
          http://www.springframework.org/schema/tx    
          http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
    
    <!-- dao -->
    <bean id="inforDao" class="org.mybatis.spring.mapper.MapperFactoryBean">  
        <property name="mapperInterface" value="com.guoleMIS.dao.info.InformationDao" />  
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
    </bean>
    
    <!-- service -->
    <bean id="inforService" class="com.guoleMIS.service.info.InformationServiceImpl">  
        <property name="informationDao" ref="inforDao" />  
    </bean>
    
    <!-- action -->
    <bean id="inforAction" class="com.guoleMIS.action.info.InformationAction">
		<property name="informationService" ref="inforService"></property>
	</bean>
</beans>
